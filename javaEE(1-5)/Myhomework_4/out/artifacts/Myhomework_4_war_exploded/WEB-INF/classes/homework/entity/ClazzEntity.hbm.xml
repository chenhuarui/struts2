<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="homework.entity.ClazzEntity" table="class" schema="homework_your">
        <id name="id">
            <column name="id" sql-type="varchar(30)" length="30"/>
        </id>
        <property name="serialNumber">
            <column name="Serial_number" sql-type="varchar(30)" length="30" not-null="false"/>
        </property>
    </class>
</hibernate-mapping>